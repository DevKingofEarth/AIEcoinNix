{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "*": "allow",
    "pkill": "deny",
    "kill": "deny",
    "pkill opencode": "deny",
    "pkill .*opencode": "deny",
    "kill .*opencode": "deny",
    "rm -rf */": "deny"
  },
  "agent": {
