        "edit": "allow",
        "write": "allow"
      }
    },
    "planner": {
      "mode": "primary",
      "description": "üìã Strategic planning agent - Creates plans and analysis, leaves implementation to Builder",
      "temperature": 0.1,
      "tools": {
        "write": true,
        "edit": true,
        "bash": false
      },
      "permission": {
        "bash": {
          "*": "ask",
          "grep *": "allow",
          "cat *": "allow",
          "head *": "allow",
          "tail *": "allow",
          "find *": "allow",
          "ls *": "allow",
          "pwd": "allow",
